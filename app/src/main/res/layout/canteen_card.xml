<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/low_right_shadow">

        <LinearLayout
            android:id="@+id/canteen_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/cantten_index"
                android:layout_width="32dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_send"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="109dp"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/canteen_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="canteen_name"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/flow_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:text="flow_state" />

                <View
                    android:id="@+id/location_icon"
                    android:layout_width="35dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="12sp"
                    android:background="@drawable/locate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8sp"
                    android:text="Location"
                    android:textColor="#626262"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:background="#6C000000"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cantten_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/he2"
                    android:scaleType="fitXY"/>


            </LinearLayout>
        </LinearLayout>


</LinearLayout>
